<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.piaozhe.ndkdemo">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

<!--    指定opengl版本2.0-->
    <uses-feature android:glEsVersion="0x00020000" android:required="true"/>
<!--    指定支持的压缩格式-->
    <supports-gl-texture android:name="GL_OES_compressed_ETC1_RGB8_texture" />
    <supports-gl-texture android:name="GL_OES_compressed_paletted_texture" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".App">
        <activity android:name=".opengl.OpenglActivity"
            android:screenOrientation="sensor"></activity>
        <activity android:name=".jni.JniNativeActivity">

        </activity>
        <activity android:name=".utils.camera.Camera2Activity"></activity>
        <activity android:name=".utils.camera.CameraActivity" />
        <activity android:name=".CameraActivity" />
        <activity android:name=".NativeActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Main2Activity" />
        <activity android:name=".ViewActivity" />
        <activity android:name=".RotateActivity" />
        <activity android:name=".ProgressActivity" />
        <activity android:name=".PathQuadToActivity" />
        <activity android:name=".AnimActivity" />
        <activity android:name=".animui.StartAnimActivity" />
    </application>

</manifest>